<%- include('./layouts/header') %>
<div class="container mt-20">
  <h4 class="text-center mb-4">Edit Category</h4>
</div>
<div class="container p-5">
  <div class="card p-4">
    <form method="POST" action="/admin/editCategory?name=<%=catData.name %>">
      <div class="form-group">
        <label for="productName">Category Name:</label>
        <input
          type="text"
          class="form-control"
          id="productName"
          name="name"
          value="<%=catData.name %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <input
          type="text"
          class="form-control"
          id="description"
          name="description"
          value="<%=catData.description %>"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary ">
        Save
      </button>
    </form>
  </div>
</div>

<style>
  .card {
    width: 50%;
    margin: auto;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .form-group label {
    font-weight: bold;
  }

  .form-control {
    border-radius: 5px;
  }

  button[type="submit"] {
    padding: 10px 20px;
    border-radius: 5px;
    background-color: #39943c;
    color: white;
    border: none;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
  }

  button[type="submit"]:hover {
    background-color: #106315;
  }
</style>
<%- include('./layouts/footer') %>
