
<%- include('./layouts/header') %>

<div class="container">
    <div class="card mt-5">
        <div class="card-body mt-3">
            <h1 class="card-title">Add Banner</h1>
            <form action="/admin/edit-banner" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="bannerImage">Banner Image:</label>
                    <input type="file" class="form-control-file" id="image" name="image" accept="image/*">
                </div>
                
                <div class="form-group">
                    <label for="info">Info:</label>
                    <input type="text" class="form-control " id="info" name="info" value="<%= banner.info %>" required>
                </div>
                
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control " id="title"  value="<%= banner.title %>" name="title" required>
                </div>
                <input type="hidden" name="id" value="<%= banner._id %>">
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control " id="description" name="description" rows="4" cols="50" required><%= banner.description %></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary">Add Banner</button>
            </form>
        </div>
    </div>
</div>

<script>
    function validateForm() {
        const infoInput = document.getElementById('info');
        const titleInput = document.getElementById('title');
        const descriptionInput = document.getElementById('description');

        if (infoInput.value.trim() === '' || titleInput.value.trim() === '' || descriptionInput.value.trim() === '') {
            alert("Fields cannot be empty or contain only spaces.");
            return false;
        }

        return true;
    }
</script>


