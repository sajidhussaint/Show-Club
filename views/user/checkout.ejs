	function validateForm() {
		var checkbox = document.getElementById('acceptCheckbox');

		if (!checkbox.checked) {
			alert("Please read and accept the terms and conditions.");
			return false;
		}
		return true;
	}


	function placeOrder() {

    const address = document.querySelector('input[name = "selectedAddress"]:checked').value
     const payment = document.querySelector('input[name = "payment"]:checked').value
     const total = document.getElementById('grandTotal').value
	 


$.ajax({
url : "/orderPlace",
method : 'post',
data : {
	payment,
	address,
	total
},
success : (response) => {
	if(response.success) {
	   window.location = '/order_Placed'
	}
}
})
}


