    background-color: #F6511D !important;
  }
  .plus:hover {
    background-color: #F6511D !important;
  }
  /*Prevent text selection*/
  
  input {
    border: 0;
    width: 2%;
  }
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  input:disabled {
