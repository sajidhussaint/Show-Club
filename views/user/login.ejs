<%- include('./header') %>
<head>
  <title>Login Page</title>

  <style>
    .login-form {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin-top: 100px;
      box-shadow: 0 2px 5px rgba(134, 58, 28, 0.616);
    }
    .btn-dark {
      background-color: #F6511D;
      color: #fff;
      border: none;
      transition: background-color 0.6s ease-in-out;
      box-shadow: 0 2px 5px rgba(134, 58, 28, 0.616);
    }

    .btn-dark:hover {
      background-color: #e23b08;
      color: rgb(223, 182, 182);
      transform: scaleX(1.1);
      transition: 0.4s ease-in-out;


      
    }
  </style>
</head>
<section class="banner-area organic-breadcrumb">
  <div class="container">
    <div
      class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end"
    ></div>
  </div>
</section>

<section class="login_box_area section_gap">
  <div class="container">
    <div class="col-lg-4 mx-auto">
      <div class="login_form_inner login-form">
        <h3 class="text-center mt-4">Log in to enter</h3>

        <form
          action="/login"
          method="post"
          id="contactForm"
          novalidate="novalidate"
        >
          <div class="mb-4">
            <!-- <label for="email">Email</label> -->
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Email"
              required
            />
            <span class="text-danger" id="Email_error"></span>
          </div>
          <div class="mb-4">
            <!-- <label for="password">Password</label> -->
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
            <span class="text-danger" id="Password_error"></span>
          </div>
          <% if (typeof message !== 'undefined') { %>
          <p class="text-center" style="color: red"><%= message %></p>
          <% } %> <% if (typeof messageS !== 'undefined') { %>
          <p class="text-center" style="color: green"><%= messageS %></p>
          <% } %>

          <div class="text-center mt-3">
            <button type="submit" class="btn btn-dark">Log In</button>
          </div>
        </form>

        <div class="text-center mt-3">
          <a href="/register">Sign Up</a> |
          <a href="/forgot">Forgot</a>
        </div>

