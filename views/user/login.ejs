<%- include('./header') %>
<head>
  <title>Login Page</title>

  <style>
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
    }

    .login-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-top: 100px;
        box-shadow: 0 2px 5px rgba(134, 58, 28, 0.616);
    }

    .btn-dark {
        background-color: #F6511D;
        color: #fff;
        border: none;
        transition: background-color 0.6s ease-in-out;
        box-shadow: 0 2px 5px rgba(134, 58, 28, 0.616);
    }

    .btn-dark:hover {
        background-color: #e23b08;
        color: rgb(223, 182, 182);
        transform: scaleX(1.1);
        transition: 0.4s ease-in-out;
    }

    .input-icon {
        position: relative;
    }

    .input-icon i {
        position: absolute;
        top: 10px;
        right: 10px;
        color: #999;
    }

    .error-msg {
        color: red;
        font-size: 12px;
        margin-top: 4px;
    }
</style>
</head>

<body>
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end"></div>
    </div>
</section>

<section class="login_box_area section_gap">
    <div class="container">
        <div class="col-lg-4 mx-auto">
            <div class="login_form_inner login-form">
                <h3 class="text-center mt-4">Log in to enter</h3>

                <form action="/login" method="post" id="loginForm" novalidate="novalidate">
                    <div class="mb-4 input-icon">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                        <i class="fas fa-envelope"></i>
                        <span class="error-msg" id="emailError"></span>
                    </div>

                    <div class="mb-4 input-icon">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        <i class="fas fa-lock"></i>
                        <span class="error-msg" id="passwordError"></span>
                    </div>

                    <% if (typeof message !== 'undefined') { %>
                    <p class="text-center" style="color: red"><%= message %></p>
                    <% } %> <% if (typeof messageS !== 'undefined') { %>
                    <p class="text-center" style="color: green"><%= messageS %></p>
                    <% } %>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-dark">Log In</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a href="/register">Sign Up</a> |
                    <a href="/forgot">Forgot</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap JS and other scripts -->
<script>
  const email = document.getElementById("email");
  const password = document.getElementById("password");
  const Email_error = document.getElementById("Email_error");
  const Password_error = document.getElementById("Password_error");

  email.addEventListener("input", () => {
    if (!email.value.match(/^[A-Za-z\._\-0-9][@][A-Za-z][\.][a-z]{2,4}$/)) {
      email.setCustomValidity(""); //Please enter a valid email
      Email_error.innerHTML = ""; //Please enter a valid email
      return false;
    }
    Email_error.innerHTML = "";
    return true;
  });

  password.addEventListener("input", () => {
    if (password.value.trim() === "") {
      Password_error.innerHTML = "Please enter the password";
    } else {
      Password_error.innerHTML = "";
      return true;
    }
  });
</script>
<!--================End Login Box Area =================-->

