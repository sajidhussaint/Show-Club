<%- include('./header') %>
<style>
  .main-cont:hover{
    transform: scale(1.05);
    transition: ease-in-out 0.5s;
  }
  .blur h1 {
    
    
    background-clip: text;
    backdrop-filter: blur(10px);
}
.banner-list {
  list-style: none;
  padding: 0;
}

.banner-item {
  position: relative;
  height: 400px; /* Adjust the height as needed */
  background-size: cover;
  background-position: center;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(rgba(49, 48, 48, 0.466), rgba(85, 84, 84, 0.719)); /* Adjust gradient colors and opacity */
  z-index: 1;
}

</style>
